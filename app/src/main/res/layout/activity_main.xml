<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:background ="@color/white"
        android:layout_marginTop="3dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ScrollView"
            android:scrollbarStyle="insideInset">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:enabled="false"
                android:id="@+id/textView"
                android:textColor="@color/black"
                android:focusable="false"
                android:longClickable="false"
                android:cursorVisible="false"
                android:inputType="" />

        </ScrollView>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/buttonLeftBracket"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonLeftBracket"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/ButtonStyle"/>

            <Button
                android:id="@+id/buttonRightBracket"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonRightBracket"
                android:layout_row="0"
                android:layout_column="1"
                style="@style/ButtonStyle"/>

            <Button
                android:id="@+id/buttonDegree"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonDegree"
                android:layout_row="0"
                android:layout_column="2"
                style="@style/ButtonStyle"/>

            <Button
                android:id="@+id/buttonDelete"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonDelete"
                android:layout_row="0"
                android:layout_column="3"
                style="@style/ButtonStyle"/>

            <Button android:id="@+id/button1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button1"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/ButtonStyle"/>

            <Button android:id="@+id/button2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button2"
                android:layout_row="1"
                android:layout_column="1"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/button3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button3"
                android:layout_row="1"
                android:layout_column="2"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/buttonAdd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonAdd"
                android:layout_row="1"
                android:layout_column="3"
                style="@style/ButtonStyle"/>

            <Button
                android:id="@+id/button4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button4"
                android:layout_row="2"
                android:layout_column="0"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/button5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button5"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/button6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button6"
                android:layout_row="2"
                android:layout_column="2"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/buttonSubtract"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonSubtract"
                android:layout_row="2"
                android:layout_column="3"
                style="@style/ButtonStyle"/>

            <Button
                android:id="@+id/button7"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button7"
                android:layout_row="3"
                android:layout_column="0"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/button8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button8"
                android:layout_row="3"
                android:layout_column="1"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/button9"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button9"
                android:layout_row="3"
                android:layout_column="2"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/buttonMultiply"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonMultiply"
                android:layout_row="3"
                android:layout_column="3"
                style="@style/ButtonStyle"/>

            <Button
                android:id="@+id/buttonPoint"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonPoint"
                android:layout_row="4"
                android:layout_column="0"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/button0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button0"
                android:layout_row="4"
                android:layout_column="1"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/buttonEqual"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonEqual"
                android:layout_row="4"
                android:layout_column="2"
                style="@style/ButtonStyle"/>
            <Button
                android:id="@+id/buttonDivide"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/buttonDivide"
                android:layout_row="4"
                android:layout_column="3"
                style="@style/ButtonStyle"/>
    </GridLayout>

</RelativeLayout>